body {
            background-color: #f4f4f4;
            font-family: Tahoma, Helvetica, sans-serif;
            font-size: 16px;
            font-weight: normal;
            line-height: 1.6em;
            margin: 0;
        }
header {
    background-color: #AD181F;

    margin: 0;
    color: white;
    font-size: 18px;
    text-align: left;
}
        header h1{
            color:white;
        }
        h1 {
            color: #AD181F;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
    
        }
        p {
            color: red;
        }
        label {
            color: red;
        }
        <!-- For Buttons -->
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            width: 80%;
            margin: auto;
        }

.tab button {
    background-color: #AD181F;
    font-family: Tahoma, Helvetica, sans-serif;
    font-size: 18px;
    color: #f4f4f4;
    float: right;
    border: groove;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    transition: 0.3s;
}

            .tab button:hover {
                background-color: #333;
            }

            .tab button.active {
                background-color: #ccc;
            }

        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 0px solid #ccc;
            border-top: none;
            animation: fadeEffect .5s;
            width: 50%;
        }

        @keyframes fadeEffect {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .navbar {
            background-color: #333;
            color: white;
        }

        .navbar ul {
            padding: 0;
            list-style: none;
         }
        .navbar li {
            display: inline;
        }
            .navbar a {
                color: white;
                text-decoration: none;
                font-size: 18px;
                padding-right: 15px;
            }
.mainfooter {
    background-color: #ad181f;
    color: white;
    text-align: center;
    padding: 30px;
    width: 100%;
    margin-top: 40px;
    position: fixed;
    bottom: 0px;
    margin-right: auto;
}
